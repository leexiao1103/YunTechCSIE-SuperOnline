<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="特務得分結算"
                    android:id="@+id/textView50"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="28pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="隊名"
                    android:id="@+id/textView51"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/textView50"
                    android:layout_alignStart="@+id/textView50"
                    android:textSize="20pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="完成第一項任務：獲得新身分(20)"
                    android:id="@+id/textView52"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView51"
                    android:layout_toEndOf="@+id/textView51"
                    android:textSize="16pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="任務(18)"
                    android:id="@+id/textView53"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView51"
                    android:layout_toEndOf="@+id/textView51"
                    android:textSize="18pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="成就(5)"
                    android:id="@+id/textView55"
                    android:layout_gravity="center_horizontal"
                    android:textIsSelectable="false"
                    android:textSize="18pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="錢(總數/1000)"
                    android:id="@+id/textView54"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="全部任務通過先後(人工計算)"
                    android:id="@+id/textView59"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="總分=任務一(20)+任務數*18+成就*5+錢/1000"
                    android:id="@+id/textView56"
                    android:layout_gravity="center_horizontal"
                    android:textIsSelectable="false"
                    android:textSize="12pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/textView57"
                    android:layout_gravity="center_horizontal"
                    android:textSize="60pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/textView58"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>